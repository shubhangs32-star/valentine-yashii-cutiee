    <script>
        // Floating hearts
        function createHeart() {
            const heart = document.createElement('div');
            heart.className = 'heart';
            heart.innerHTML = ['ğŸ’–','ğŸ’','â¤ï¸','ğŸ’•','ğŸ’—'][Math.floor(Math.random()*5)];
            heart.style.left = Math.random() * 100 + '%';
            heart.style.animationDuration = (Math.random() * 4 + 4) + 's';
            document.getElementById('hearts').appendChild(heart);
            setTimeout(() => heart.remove(), 8000);
        }
        setInterval(createHeart, 500);

        // No button dodge
        let dodges = 0;
        function dodgeNo(event) {
            const btn = event.target;
            dodges++;
            if (dodges < 10) {
                btn.style.position = 'absolute';
                btn.style.transform = `translate(${Math.random()*300-150}px, ${Math.random()*300-150}px) rotate(${Math.random()*30-15}deg)`;
                btn.style.fontSize = '1.2em';
            } else {
                document.getElementById('secret1').classList.remove('hidden');
                setTimeout(() => nextQuestion('q2'), 2000);
            }
        }

        // Question flow
        function nextQuestion(showId) {
            document.querySelectorAll('.container').forEach(el => el.classList.add('hidden'));
            document.getElementById(showId).classList.remove('hidden');
            
            if (showId === 'q2') {
                let percent = 0;
                const meter = document.getElementById('loveMeter');
                const loveInterval = setInterval(() => {
                    percent += Math.random() * 800 + 300;
                    meter.textContent = percent > 9999 ? 'âˆ% ğŸ¥°ğŸš€' : Math.floor(percent) + '%';
                    if (percent > 9999) {
                        clearInterval(loveInterval);
                        meter.textContent = 'âˆ% To infinity & beyond! ğŸš€ğŸ’–';
                    }
                }, 100);
            }
        }

        // Countdown
        let count = 3;
        setTimeout(() => {
            const cd = document.getElementById('countdown');
            const interval = setInterval(() => {
                count--;
                cd.textContent = count;
                if (count <= 0) {
                    clearInterval(interval);
                    cd.textContent = 'ğŸ’';
                }
            }, 900);
        }, 1500);

        // Celebration
        function celebrate() {
            document.querySelectorAll('.container').forEach(el => el.classList.add('hidden'));
            document.getElementById('celebrate').classList.remove('hidden');
            
            // Massive heart explosion
            for (let i = 0; i < 60; i++) {
                setTimeout(() => {
                    createHeart();
                    createHeart();
                }, i * 80);
            }
            
            // Auto-transition to final message after 4 seconds
            setTimeout(() => {
                document.getElementById('celebrate').classList.add('hidden');
                document.getElementById('finalMessage').classList.remove('hidden');
            }, 4000);
        }

        function revealGift() {
            document.getElementById('giftReveal').classList.remove('hidden');
            // More heart explosions on gift reveal
            for (let i = 0; i < 40; i++) {
                setTimeout(() => createHeart(), i * 100);
            }
        }

        // Music (optional)
        let audio = null;
        function toggleMusic() {
            if (!audio) {
                audio = new Audio('data:audio/wav;base64,UklGRnoGAABXQVZFZm10IBAAAAABAAEAQB8AAEAfAAABAAgAZGF0YQoGAACBhYqFbF1fdJivrJBhNjVgodDbq2EcBj+a2/LDciUFLIHO8tiJNwgZaLvt559NEAxQp+PwtmMcBjiR1/LMeSwFJHfH8N2QQAo'); 
                audio.loop = true;
                audio.volume = 0.3;
            }
            if (audio.paused) {
                audio.play();
                event.target.innerHTML = 'ğŸ”‡ Stop Music';
            } else {
                audio.pause();
                event.target.innerHTML = 'ğŸµ Play Music';
            }
        }
    </script>
